@model QuanLyDaoTaoWeb.Models.DeCuong

@{
    ViewData["Title"] = "Chỉnh Sửa Đề Cương";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <h1 class="page-title">Chỉnh Sửa Đề Cương</h1>
    </div>

    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@modelError.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="EditDeCuong" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaDC" />

            <div class="form-group">
                <label asp-for="MaMH" class="control-label">Môn Học</label>
                <select asp-for="MaMH" asp-items="ViewBag.MonHocList" class="form-control">
                    <option value="">-- Chọn Môn Học --</option>
                </select>
                <span asp-validation-for="MaMH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MoTa" class="control-label">Mô Tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MucTieu" class="control-label">Mục Tiêu</label>
                <textarea asp-for="MucTieu" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MucTieu" class="text-danger"></span>
            </div>

            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a asp-action="DeCuongIndex" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
