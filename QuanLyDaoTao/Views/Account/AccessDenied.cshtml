@{
    ViewData["Title"] = "Từ chối truy cập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="fas fa-exclamation-triangle"></i> Từ chối truy cập</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger mb-3"></i>
                        <h5>Bạn không có quyền truy cập vào trang này</h5>
                        <p class="text-muted">
                            Bạn đang cố gắng truy cập vào trang yêu cầu quyền hạn cao hơn.
                        </p>
                    </div>
                    <div>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                        @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                        {
                            <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại trang trước
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
