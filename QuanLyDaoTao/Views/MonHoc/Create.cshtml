@model QuanLyDaoTaoWeb.Models.MonHoc

@{
    ViewData["Title"] = "Thêm Môn Học";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thêm Mới Môn Học</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaMH" class="form-label"></label>
                        <input asp-for="MaMH" class="form-control" />
                        <span asp-validation-for="MaMH" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TenMH" class="form-label"></label>
                        <input asp-for="TenMH" class="form-control" />
                        <span asp-validation-for="TenMH" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SoTinChi" class="form-label"></label>
                        <input asp-for="SoTinChi" class="form-control" type="number" min="1" max="10" />
                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MaKhoa" class="form-label"></label>
                        <select asp-for="MaKhoa" asp-items="ViewBag.KhoaList" class="form-select">
                            <option value="">-- Chọn Khoa --</option>
                        </select>
                        <span asp-validation-for="MaKhoa" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}