@model IEnumerable<QuanLyDaoTaoWeb.Models.PhanCongGiangDay>

@{
    ViewData["Title"] = "Danh sách Phân Công Giảng Dạy";
}
@if(User.IsInRole("Admin")){
<div class="page-container">
    <div class="page-header">
        <h1 class="page-title">Danh Sách Phân Công Giảng Dạy</h1>

    </div>
    <div class="table-responsive">
        <table class="data-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MaPCGD)</th>
                    <th>@Html.DisplayNameFor(model => model.MaGV)</th>
                    <th>@Html.DisplayNameFor(model => model.MaMH)</th>
                    <th>@Html.DisplayNameFor(model => model.MaLop)</th>
                    <th>@Html.DisplayNameFor(model => model.HocKy)</th>
                    <th>@Html.DisplayNameFor(model => model.NamHoc)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaPCGD)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaGV)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaMH)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaLop)</td>
                        <td>@Html.DisplayFor(modelItem => item.HocKy)</td>
                        <td>@Html.DisplayFor(modelItem => item.NamHoc)</td>
                        <td>
                            <div class="table-actions">
                                <a asp-action="Edit" asp-route-id="@item.MaPCGD"
                                    class="btn btn-secondary" title="Sửa">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaPCGD"
                                    class="btn btn-danger" title="Xóa">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="action-buttons">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
</div>
}
@section Scripts {
    <script>
        $(document).ready(function() {
            $('.datatable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
                }
            });
        });
    </script>
}
