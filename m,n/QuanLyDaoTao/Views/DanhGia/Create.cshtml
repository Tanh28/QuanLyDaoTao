@model QuanLyDaoTaoWeb.Models.DanhGia

@{
    ViewData["Title"] = "Thêm Đánh Giá Mới";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thêm Mới Đánh Giá</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateDanhGia" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaDG" class="form-label"></label>
                        <input asp-for="MaDG" class="form-control" />
                        <span asp-validation-for="MaDG" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MaSV" class="form-label"></label>
                        <select asp-for="MaSV" asp-items="ViewBag.SinhVienList" class="form-select select2">
                            <option value="">-- Chọn Sinh Viên --</option>
                        </select>
                        <span asp-validation-for="MaSV" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaMH" class="form-label"></label>
                        <select asp-for="MaMH" asp-items="ViewBag.MonHocList" class="form-select select2">
                            <option value="">-- Chọn Môn Học --</option>
                        </select>
                        <span asp-validation-for="MaMH" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DiemDanhGia" class="form-label"></label>
                        <input asp-for="DiemDanhGia" class="form-control" type="number" min="1" max="10" />
                        <span asp-validation-for="DiemDanhGia" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NhanXet" class="form-label"></label>
                    <textarea asp-for="NhanXet" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="NhanXet" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="DanhGiaIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: 'bootstrap4'
            });
        });
    </script>
}