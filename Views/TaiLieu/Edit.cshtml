@model QuanLyDaoTaoWeb.Models.TaiLieu

@{
    ViewData["Title"] = "Chỉnh Sửa Tài Liệu";
}

<div class="page-container">
    <div class="page-header">
        <h1 class="page-title">Chỉnh Sửa Tài Liệu</h1>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaTL" />
            <input type="hidden" asp-for="DuongDan" />

            <!-- Tên Tài Liệu -->
            <div class="form-group">
                <label asp-for="TenTL" class="control-label">Tên Tài Liệu <span class="text-danger">*</span></label>
                <input asp-for="TenTL" class="form-control" maxlength="50" />
                <span asp-validation-for="TenTL" class="text-danger"></span>
            </div>

            <!-- Bài Giảng -->
            <div class="form-group">
                <label asp-for="MaBG" class="control-label">Bài Giảng</label>
                <select asp-for="MaBG" asp-items="ViewBag.BaiGiangList" class="form-control">
                    <option value="">-- Chọn Bài Giảng --</option>
                </select>
                <span asp-validation-for="MaBG" class="text-danger"></span>
            </div>

            <!-- Tệp Tài Liệu Hiện Tại -->
            <div class="form-group">
                <label class="control-label">Tệp Tài Liệu Hiện Tại</label>
                <div class="input-group">
                    <a href="@Model.DuongDan" target="_blank" class="form-control">
                        <i class="fas fa-file"></i> @Model.DuongDan
                    </a>
                </div>
            </div>

            <!-- Tải Lên Tệp Mới -->
            <div class="form-group">
                <label class="control-label">Tải Lên Tệp Mới (Nếu Muốn Thay Đổi)</label>
                <input type="file" name="fileUpload" class="form-control" />
                <small class="text-muted">Định dạng hỗ trợ: .pdf, .doc, .docx, .ppt, .pptx</small>
            </div>

            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập Nhật
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay Lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
