@model QuanLyDaoTaoWeb.Models.LopHoc

@{
    ViewData["Title"] = "Chỉnh Sửa Lớp Học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <h1 class="page-title">Chỉnh Sửa Lớp Học</h1>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaLop" />

            <div class="form-group">
                <label asp-for="TenLop" class="control-label">Tên Lớp</label>
                <input asp-for="TenLop" class="form-control" />
                <span asp-validation-for="TenLop" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaCTDT" class="control-label">Chương Trình Đào Tạo</label>
                <select asp-for="MaCTDT" asp-items="ViewBag.ChuongTrinhDaoTaoList" class="form-control">
                    <option value="">-- Chọn Chương Trình Đào Tạo --</option>
                </select>
                <span asp-validation-for="MaCTDT" class="text-danger"></span>
            </div>

            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
