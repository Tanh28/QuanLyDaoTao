@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Identity.UserManager<QuanLyDaoTaoWeb.Models.ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Identity.SignInManager<QuanLyDaoTaoWeb.Models.ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Account" asp-action="Index" title="Manage">Xin chào @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Đăng Xuất</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-page="/Account/Register">Đăng Ký</a></li>
        <li><a asp-area="" asp-page="/Account/Login">Đăng Nhập</a></li>
    </ul>
}