@model QuanLyDaoTaoWeb.Models.ChuongTrinhDaoTao

@{
    ViewData["Title"] = "Thêm Chương Trình Đào Tạo";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thêm Mới Chương Trình Đào Tạo</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaCTDT" class="form-label"></label>
                        <input asp-for="MaCTDT" class="form-control" />
                        <span asp-validation-for="MaCTDT" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MaKhoa" class="form-label"></label>
                        <select asp-for="MaKhoa" asp-items="ViewBag.KhoaList" class="form-select">
                            <option value="">-- Chọn Khoa --</option>
                        </select>
                        <span asp-validation-for="MaKhoa" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TenCTDT" class="form-label"></label>
                    <input asp-for="TenCTDT" class="form-control" />
                    <span asp-validation-for="TenCTDT" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NamBatDau" class="form-label"></label>
                        <input asp-for="NamBatDau" class="form-control" type="number" min="2000" max="2030" />
                        <span asp-validation-for="NamBatDau" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="TrangThai" class="form-check-input" />
                            <label asp-for="TrangThai" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}